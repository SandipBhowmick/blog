<% @user_title = "User List" %>

<%= link_to("<< Back to Menu",{:controller => 'access',:action =>'index'}, :class => 'back-link') %>

<div class="user index">
  <h2> Users</h2>

  <%= link_to(image_tag('plus_sign.png', :size => '11*11', :alt => '+') + " Sign up", {:action =>'new'}, :class => 'action new') %>
  <div><%= pluralize(@users.size, 'user') %> found </div>
  <table class="listing" summary="Users list">
    <tr class="header">
      <th>&nbsp;</th>
      <th>Username</th>
      <th>Name</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
    <tr class="<%= cycle('odd', 'even') %>">
      <td><%= user.username %></td>
      <td><%= user.name %></td>
      <td><%= mail_to(user.email) %></td>
      <td class="actions">
        <%= link_to("Edit", {:action =>'edit', :id => user.id}, :class => 'action edit') %>
        <%= link_to("Delete", {:action => 'destroy',:id => user.id}, :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
